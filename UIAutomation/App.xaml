<Application
    x:Class="UIAutomation.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:UIAutomation"
    StartupUri="Views/MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!--  //  WPF CONTROL COLORS  //  -->
                <ResourceDictionary Source="Resources/Styles/AppColors.xaml" />
                <ResourceDictionary Source="Resources/Styles/DarkTheme.xaml" />

                <!--  //  WPF CONTROL STYLES  //  -->
                <ResourceDictionary Source="Resources/Styles/BorderStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/CheckBoxStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/RepeatButtonStyle.xaml" />
                <ResourceDictionary Source="Resources/Styles/SliderStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/TextBlockStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/TextBoxStyles.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
