<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BorderStyle" TargetType="{x:Type Border}">
        <Setter Property="Border.BorderThickness" Value="0.8" />
        <Setter Property="Border.CornerRadius" Value="8" />
        <Setter Property="Border.Background" Value="#FF3D3D3D" />
        <Setter Property="Border.BorderBrush" Value="White" />
        <Setter Property="Border.Padding" Value="8" />
    </Style>

    <Style x:Key="BorderStylenNoCorner" TargetType="{x:Type Border}">
        <Setter Property="Border.BorderThickness" Value="1" />
        <Setter Property="Border.CornerRadius" Value="0" />
        <Setter Property="Border.Background" Value="#FF3D3D3D" />
        <Setter Property="Border.BorderBrush" Value="White" />
        <Setter Property="Border.Padding" Value="8" />
    </Style>


